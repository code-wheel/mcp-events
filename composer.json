{
    "name": "code-wheel/mcp-events",
    "description": "Standardized event classes for MCP (Model Context Protocol) tool execution lifecycle",
    "type": "library",
    "keywords": ["mcp", "model-context-protocol", "events", "observability", "ai", "llm"],
    "license": "MIT",
    "authors": [
        {
            "name": "CodeWheel",
            "email": "dev@codewheel.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "mcp/sdk": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0 || ^11.0"
    },
    "autoload": {
        "psr-4": {
            "CodeWheel\\McpEvents\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeWheel\\McpEvents\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    }
}
